<div class="container">
  <h5 class="my-5 ml-5">タスク編集</h5>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <% if @task.errors.any? %>
        <ul class="alert alert-danger mb-5" role="alert">
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @task, url: task_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, "説明" %>
          <%= f.text_field :description, class: "form-control" %>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="deadline">日時</label>
            <input id="deadline" class="form-control" type="datetime-local" name="task[deadline]" value="<%= @time %>" %>
          </div>
          <div class="form-group col-md-6">
            <%= f.label :category_id %>
            <%= f.collection_select :category_id, @categories, :id, :name, {prompt: false}, {class: "form-control"} %>
            </select>
          </div>
        </div>
        <%= f.submit "更新", class: "btn btn-primary col mt-3" %>
      <% end %>
    </div>
  </div>
</div>